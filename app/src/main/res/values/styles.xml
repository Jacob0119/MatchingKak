<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>



    </style>
    <style name="AppTheme.collapsing" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>
    <style name="AppTheme.ActionBar.Transparent" parent="AppTheme">
        <item name="android:homeAsUpIndicator">@drawable/back_button_white</item>
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.ActionBar" parent="AppTheme">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>
    <style name="AppTheme.white" parent="AppTheme">
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorPrimary">@color/white</item>
        <item name="android:titleTextColor">@color/black</item>
        <item name="android:actionMenuTextColor">@color/black</item>
        <item name="android:actionOverflowMenuStyle">@color/black</item>
        <item name="android:textColorSecondary">@color/black

        </item>
    </style>
    <style name="home_cardview">
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="home_cardview_title">
        <item name="android:background">#00ffffff</item>
        <item name="android:fontFamily">@font/main_font</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">15dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="AppTheme.RoundedCornerMaterialButton">

        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">75dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:layout_weight">1</item>

    </style>

    <style name="image_in_list">
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_gravity">start|right</item>

    </style>

    <style name="small_CardView">
        <item name="cardCornerRadius">2dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardElevation">0dp</item>

    </style>

    <style name="alarm_CardView">
        <item name="cardCornerRadius">2dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:padding">15dp</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="contentPadding">0dp</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/bg_login_button</item>
    </style>

    <style name="header_text" parent="@android:style/Widget.TextView">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:fontFamily">@font/main_font</item>
    </style>

    <style name="primary_text" parent="@android:style/Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@font/main_font</item>


    </style>

    <style name="primary_text_for_list">
        <item name="android:gravity">center|left</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:layout_margin">2dp</item>

        <item name="android:fontFamily">@font/main_font</item>


    </style>

    <style name="secondary_text" parent="@android:style/Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:fontFamily">@font/main_font</item>

    </style>

    <style name="secondary_text_small" >
        <item name="android:gravity">center</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:fontFamily">@font/main_font</item>

    </style>

    <style name="date_text" >
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/pretty_red</item>

    </style>

    <style name="login_btn">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="edit_style">

        <item name="android:paddingLeft">30dp</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">43dp</item>
        <item name="android:textColorHint">@color/transparent_black</item>
        <item name="android:background">@color/transparent_white</item>

    </style>

    <style name="btn_Text_white">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>
<style name="list_game_text_basic">
    <item name="android:fontFamily">@font/main_font</item>
    <item name="android:gravity">center</item>
    <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
    <item name="android:lines">1</item>
    <item name="android:textSize">12dp</item>

</style>
<style name="list_game_text_basic_red" parent="list_game_text_basic">
    <item name="android:textColor">@color/pretty_red</item>
</style>
<style name="rounded_text_red" parent="list_game_text_basic">
    <item name="android:textColor">@color/pretty_red</item>
    <item name="android:backgroundTint">@color/pretty_red</item>
    <item name="android:background">@drawable/rounded_textview</item>
</style>
    <style name="rounded_text_blue" parent="list_game_text_basic">
        <item name="android:textColor">@color/pretty_blue</item>
        <item name="android:backgroundTint">@color/pretty_blue</item>
        <item name="android:background">@drawable/rounded_textview</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>
<style name="alarm_image">
    <item name="android:layout_width">25dp</item>
    <item name="android:layout_height">25dp</item>
   <item name="android:tint">@color/pretty_red</item>
    <item name="android:scaleType">centerInside</item>
</style>
    <style name="alarm_dialog_text">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#505050</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
    </style>
    <style name="alarm_layout">

        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingLeft">20dp</item>
    </style>
    <style name="alarm_dialog_button">
        <item name="android:textColor">@color/white</item>
    <item name="android:elevation">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:fontFamily">@font/main_font</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Title</item>

    </style>
</resources>
