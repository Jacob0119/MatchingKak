<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/alarm_CardView"
    android:layout_marginLeft="30dp"
    android:layout_height="wrap_content">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView

            android:id="@+id/alarm_image"
            style="@style/image_in_list" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/alarm_list_title"
                style="@style/primary_text_for_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="수락 되었습니다." />

            <TextView

                android:id="@+id/alarm_list_date"
                style="@style/date_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2017/4/23" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="right">

                <ImageView
                    android:id="@+id/alarm_info"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/info2" />

                <ImageView
                    android:id="@+id/alarm_send"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/mail" />
            </LinearLayout>


        </LinearLayout>

