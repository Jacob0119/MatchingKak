<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/small_CardView"
    android:layout_gravity="center"
    >

    <LinearLayout
        android:id="@+id/temp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <ImageView

            android:id="@+id/game_view_image"
            android:layout_width="@dimen/grid_size"
            android:layout_height="@dimen/grid_size"
            android:layout_gravity="center"
            android:background="@color/natural_gray" />



        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/game_view_sport"
                style="@style/primary_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="5dp"
                android:text="농구" />





            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/game_view_location"
                    style="@style/secondary_text_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="서울특별시 종로구"
                    android:textColor="@color/primary_text" />

                <TextView
                    android:id="@+id/game_view_date"
                    style="@style/date_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017/4/23" />

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>




    <LinearLayout
        android:id="@+id/game_view_state_back"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:background="@color/pretty_red"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/game_view_state_text"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:text="성사완료"
            android:textColor="@color/white"
            android:textSize="10dp" />
    </LinearLayout>
</android.support.v7.widget.CardView>
