<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginBottom="1dp"
  >
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_margin="@dimen/margin_bottom"


    >





        <LinearLayout
            android:layout_margin="1dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
          >

            <TextView
                android:id="@+id/message_list_title"
                android:paddingLeft="10dp"
                style="@style/primary_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="장소" />
    <LinearLayout
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <TextView
                android:gravity="left"
                android:layout_weight="1"
                android:id="@+id/message_list_sender"
                style="@style/secondary_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sender" />
            <TextView
                android:gravity="right"
                android:id="@+id/message_list_date"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/secondary_text_small"
                android:text="2017/4/23"
                android:textColor="@color/pretty_red"/>
        </LinearLayout>


        </LinearLayout>
    </LinearLayout>



</android.support.v7.widget.CardView>