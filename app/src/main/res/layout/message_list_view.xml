<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="#ff000000"

    app:cardElevation="0dp"

  >
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"


    >
    <!--
    <ImageView
       android:layout_margin="10dp"
        android:src="@drawable/dustbin"
        android:layout_gravity="center"
        android:layout_width="20dp"
        android:layout_height="20dp" />

    1-->

    <LinearLayout
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2">

            <ImageView
                android:background="@drawable/circle_image_border"
                android:layout_centerInParent="true"
                android:src="@drawable/gra_bg2"
                android:id="@+id/message_list_image"
                android:layout_height="60dp"
                android:layout_width="60dp"/>



                </LinearLayout>

    <LinearLayout
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

    >
        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:gravity="left"
            android:id="@+id/message_list_sender"
            style="@style/primary_text"
            android:textSize="15sp"
            android:textColor="@color/chat_bubble_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sender"

            />
        <TextView

            android:layout_gravity="end|bottom"
            android:id="@+id/message_list_date"
            style="@style/secondary_text_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="2017-04-23"
            android:textColor="@color/secondary_text"

            />
        </LinearLayout>
        <TextView

            android:textStyle="bold"
            android:maxWidth="240dp"
            android:minWidth="20dp"

            android:id="@+id/message_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How are you?????"
            android:padding="5dp"
/>

    </LinearLayout>
</LinearLayout>



</android.support.v7.widget.CardView>